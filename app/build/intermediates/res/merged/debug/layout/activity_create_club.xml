<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/btn_back"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textColor="#06bf04"
            android:background="@null"
            android:textSize="18sp" />


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical" >
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="社团已存在"
                android:textColor="@color/red"
                android:visibility="gone"
                android:id="@+id/errorInfo"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="社团名称为空"
                android:textColor="@color/red"
                android:visibility="gone"
                android:id="@+id/errorNUllName"/>
            <EditText
                android:id="@+id/club_name_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_holo_light"
                android:hint="请输入社团名称"
                android:singleLine="true"
                android:padding="8dp"
                android:layout_marginBottom="15px"/>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="社团简介为空"
                android:textColor="@color/red"
                android:visibility="gone"
                android:id="@+id/errorNUllInfo"/>
            <EditText
                android:id="@+id/club_message_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edit_text_holo_light"
                android:hint="请输入社团信息"
                android:singleLine="true"
                android:padding="8dp"
                android:layout_marginBottom="15px"/>
            <Spinner
                android:layout_width="wrap_content"
                android:id="@+id/spinner"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/register_club_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_denglu"
            android:gravity="center"
            android:padding="8dp"
            android:text="创建社团"
            android:textColor="#ffffff" />
    </LinearLayout>

</RelativeLayout>