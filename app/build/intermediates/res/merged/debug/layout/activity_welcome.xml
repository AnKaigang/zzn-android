<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    
    <com.imsdk.imdeveloper.ui.view.RoundedCornerImageView
        android:id="@+id/wel_img1" 
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/icon"
        android:contentDescription="@null"
        android:layout_above="@+id/welcome_word"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="37dp" />
    <TextView
        android:layout_width="wrap_content"
        android:text="因为爱东秦，所以爱东秦"
        android:gravity="center"
        android:textSize="20dp"
        android:id="@+id/welcome_word"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />
    
    
    <ImageView 
        android:id="@+id/wel_img2"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:src="@drawable/welcome_2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:contentDescription="@null"/>


</RelativeLayout>
