                    android:layout_toRightOf="@+id/text_index6"
                    android:background="@drawable/shezhi_top_bg" >

                    <ImageView
                        android:id="@+id/arrow_index6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ziliaobianji_jiantou_icon" />

                    <TextView
                        android:id="@+id/groupinfo_member_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/arrow_index6"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#999999"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/groupinfo_department_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shezhi_top_bg" >

                <TextView
                    android:id="@+id/text_index77"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.5dp"
                    android:gravity="center_vertical"
                    android:text="部门管理"
                    android:textColor="#565555"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/text_index77"
                    android:background="@drawable/shezhi_top_bg" >

                    <ImageView
                        android:id="@+id/arrow_index77"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ziliaobianji_jiantou_icon" />

                    <TextView
                        android:id="@+id/groupinfo_department_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/arrow_index77"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#999999"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/groupinfo_manage_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shezhi_top_bg" >

                <TextView
                    android:id="@+id/text_index7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.5dp"
                    android:gravity="center_vertical"
                    android:text="@string/club_manage"
                    android:textColor="#565555"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginLeft="30dp"
                    android:layout_toRightOf="@+id/text_index7"
                    android:background="@drawable/shezhi_top_bg" >

                    <ImageView
                        android:id="@+id/arrow_index7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ziliaobianji_jiantou_icon" />

                    <TextView
                        android:id="@+id/groupinfo_manage_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/arrow_index7"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#999999"
                        android:textSize="16sp" />
                </RelativeLayout>

            </RelativeLayout>





        </LinearLayout>

    </ScrollView>

</RelativeLayout>