                        android:src="@drawable/ziliaobianji_jiantou_icon" />

                    <TextView
                        android:id="@+id/groupinfo_party_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@id/arrow_index5"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#999999"
                        android:textSize="16sp" />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/groupinfo_member_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/shezhi_top_bg"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_index6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="13.5dp"
